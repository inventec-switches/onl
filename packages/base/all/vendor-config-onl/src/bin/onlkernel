#!/bin/sh
############################################################
if [ -z "$1" ]; then
    echo "usage: $0 <kernel url>"
    exit 1
fi

ARCH=`uname -m`
case $ARCH in
    x86_64)
    ;;
    *)
    echo "This script cannot be used on $ARCH platforms."
    exit 1
    ;;
esac

dir=`mktemp -d`
rc=

if (cd $dir && wget $1); then
    onlfs rw boot mv $dir/* /mnt/onl/boot
    rc=0
else
    echo "Download failed."
    rc=1
fi

rmdir $dir
exit $rc
